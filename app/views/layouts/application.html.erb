<!DOCTYPE html>
<html>
<head>
  <title>Microposts</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= render 'layouts/header' %>
  <% if logged_in? %>
  <% if controller.action_name == "followings" || controller.action_name == "followers" || controller.action_name == "favorites" %>
  <div style="width: 100%; height: 180px; margin-top: -10px;"<% if controller.action_name == "followings" || controller.action_name == "followers" || controller.action_name == "favorites" %> class="bg-type<%= @user.color %>"<% end %>></div>
  <%= render 'layouts/user_basic_info' %>
  <% end %>
  <% end %>
  <div style="width: 100%; height: 100%; background-color: #fff;">
    <div class="container">
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
      <%= yield %>
    </div>
  </div>
  
  <% if !@microposts.blank? %>
  <%# if controller.action_name == "show" || controller.action_name == "home" || controller.action_name == "favorites" %>
  <!-- retweet dialog -->
  <%= render 'shared/retweet_dialog' %>
  <% end %>
</body>
</html>
