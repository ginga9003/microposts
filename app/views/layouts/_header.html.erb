<header class="navbar navbar-fixed-top navbar-inverse" style="margin-bottom: 0;">
  <div class="container">
    <nav>
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#nav-menu" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only"><%= t('layouts._header.toggle') %></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "Microposts", "#", id: "logo", class: "navbar-brand" %>
      </div>
      <div class="collapse navbar-collapse" id="nav-menu">
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to t('layouts._header.home'), root_url %></li>
          <li><%= link_to t('layouts._header.help'), "#" %></li>
          <% if logged_in? %>
            <li class="dropdown<% if action_name == 'edit' %> active<% end %>">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t('layouts._header.account') %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t('layouts._header.settings'), edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                    <%= link_to t('layouts._header.logout'), logout_path, method: "delete" %>
                </li>
              </ul>
            </li>            
          <% else %>                
            <li><%= link_to t('common.login'), login_path %></li>
          <% end %>
        </ul>
      </div>
    </nav>
  </div>
</header>