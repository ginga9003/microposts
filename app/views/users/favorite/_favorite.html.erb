    <%= form_for(current_user.user_favorites.build, 
      html: { id: "favorite_form_" + micropost.id.to_s }, 
      remote: true) do |f| %>
      <%= hidden_field_tag :micropost_id, micropost.id %>
      <span class="favorite_area" onclick="execFavorite(<%= micropost.id %>);">
        <span class="glyphicon glyphicon-star-empty"></span>
        <% if micropost.micropost_favorite_users.length != 0 %>
        <span><%= micropost.micropost_favorite_users.length %></span>
        <% end %>
      </span>
    <% end %>