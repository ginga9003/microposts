<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
  
      <%= f.label :name, t('common.profile.name') %>
      <%= f.text_field :name %>
  
      <%= f.label :email, t('common.profile.email') %>
      <%= f.text_field :email %>

      <%= f.label :password, t('common.profile.password') %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, t('common.profile.password_confirmation') %>
      <%= f.password_field :password_confirmation %>
      
      <%= f.submit t('users.new.create'), class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>