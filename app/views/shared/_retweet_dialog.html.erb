<div class="modal fade" id="retweetModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
    <%= form_for(@microposts) do |f| %>
      <%= f.hidden_field :retweet_id, id: "retweet_id"  %>
      <div class="modal-body">
        <div class="form-group">
          <%= f.text_area :content, class: "form-control", placeholder: t('shared._micropost_form.placeholder'), id: "retweet_content" %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal"><%= t('common.close') %></button>
        <button type="submit" class="btn btn-primary" id="retweet_btn"><%= t('common.retweet') %></button>
        <button type="submit" class="btn btn-primary" id="tweet_btn" style="display: none;"><%= t('common.tweet') %></button>
      </div>
    <% end %>
    </div>
  </div>
</div>